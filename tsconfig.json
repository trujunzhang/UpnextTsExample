{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    // enables absolute path imports
    "paths": {
      // define absolute path mappings
      "@src/*": [
        "src/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@assets/*": [
        "static/*"
      ]
      // will enable -> import { ... } from '@src/components'
      // in webpack you need to add -> resolve: { alias: { '@src': PATH_TO_SRC } }
    },
    "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "module": "commonjs",
    // enable JSX mode, but "preserve" tells TypeScript to not transform it (we'll use Babel)
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  }
}
